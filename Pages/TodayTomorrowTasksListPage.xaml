<Page x:Class="Project_Pad.Pages.TodayTomorrowTasksListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_Pad.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" UseLayoutRounding="True"
      Title="TodayTomorrowTasksListPage" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="HeaderofPage" Foreground="{DynamicResource TextColor}" FontSize="16" Content="List of Todays Tasks" HorizontalAlignment="center"/>
        <ScrollViewer  Style="{DynamicResource ScrollViewerStyle1}" VerticalScrollBarVisibility="auto" Grid.Row="1">
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="center" x:Name="main_panel">

            </WrapPanel>


        </ScrollViewer>
    </Grid>
</Page>
